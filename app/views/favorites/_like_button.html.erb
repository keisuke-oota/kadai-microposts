<% unless current_user == microposts %>
  <% if current_user.liking?(microposts) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :microposts_id, microposts.ids %>
      <%= f.submit 'UnLike', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
      <%= hidden_field_tag :microposts, microposts.ids %>
      <%= f.submit 'Like', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<% end %>